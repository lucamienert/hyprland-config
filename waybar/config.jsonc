{
    "layer": "top",
    "position": "top",
    "height": 40,
    "margin-top": 0,
    "margin-bottom": 0,
    "margin-left": 0,
    "margin-right": 0,

    "modules-left": [
        "hyprland/workspaces", 
        "custom/menu",
        "hyprland/window"
    ],
    "modules-center": ["clock"],
    "modules-right": [
        "custom/open_apps",
        "custom/nightlight",
        "custom/notifications", 
        "pulseaudio", 
        "network", 
        "tray", 
        "custom/wlogout"
    ],
    "hyprland/workspaces": {
        "format": "{name}",
        "all-outputs": true,
        "persistent-workspaces": {
            "*": 5
        }
    },
    "hyprland/window": {
        "format": "{}",
        "separate-outputs": true,
        "max-length": 50,
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "üåê Firefox",
            "(.*) - Visual Studio Code": "üíª Code",
            "(.*) - Spotify": "üéµ Spotify"
        }
    },
    "custom/notifications": {
        "format": "ÔÇ¢",
        "tooltip": false,
        "on-click": "swaync-client -t",
        "on-click-right": "swaync-client -d -a",
        "return-type": "json",
        "exec": "swaync-client -swb",
        "interval": 1
    },
    "custom/wlogout": {
        "format": "ÔÜé ",
        "on-click": "wlogout --layout ~/.config/wlogout/layout --css ~/.config/wlogout/style.css",
        "tooltip": false
    },
    "custom/focused_app": {
        "format": "{}",
        "exec": "~/.config/waybar/scripts/focused_app.sh",
        "return-type": "text",
        "interval": 1,
        "tooltip": false
    },
    "custom/menu": {
        "format": "Ôãê",
        "on-click": "wofi --show drun -I",
        "tooltip": false
    },
    "clock": {
        "format": "{:%d %b %Y  %H:%M}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>"
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-muted": "Muted {icon}",
        "format-icons": {
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "network": {
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "Connected ÔÉÅ",
        "format-disconnected": "Disconnected ‚ö†",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}"
    },
    "tray": {
        "icon-size": 16,
        "spacing": 10
    },
    "custom/nightlight": {
        "format": "ÔÜÜ",
        "tooltip": "Toggle Night Light",
        "on-click": "~/.config/waybar/scripts/toggle-nightlight.sh"
    },
    "custom/open_apps": {
        "format": "Ôãí",
        "on-click": "~/.config/waybar/scripts/open_apps_dropdown.sh",
        "tooltip": false
    }
}